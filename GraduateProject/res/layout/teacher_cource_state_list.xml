<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:gravity="center" >

        <CheckBox
        android:id="@+id/teacher_cource_state_cb_choose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/anim_remember"
        android:button="@null"
        android:checked="false"
         />
    </RelativeLayout>
   
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="150dp"
	      android:layout_weight="3.5"
	      android:orientation="vertical"
	      android:padding="15dp"
	    >
	    <TextView 
	        android:id="@+id/teacher_cource_state_tv_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="姓名:叶胜"
	        />
	    <TextView 
	        android:id="@+id/teacher_cource_state_tv_class"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="班级:软件11203班"
	        />
	    <TextView 
	        android:id="@+id/teacher_cource_state_tv_vol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="志愿:第一志愿"
	        />
	    <TextView 
	        android:id="@+id/teacher_cource_state_tv_state"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:layout_weight="1"
	        android:textSize="16sp"
	        android:text="状态:正在审核"
	        />
	</LinearLayout>
	
</LinearLayout>
