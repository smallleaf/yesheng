        <activity
            android:name="com.example.graduate.student.activity.DetailCourceActivity"
            android:label="@string/title_activity_detail_cource" >
        </activity>
        <activity
            android:name="com.example.graduate.student.activity.DetailTeacherActivity"
            android:label="@string/title_activity_detail_teacher" >
        </activity>
        <activity
            android:name="com.example.graduate.student.activity.SystemActivity"
            android:label="@string/title_activity_system" >
        </activity>
        <activity
            android:name="com.example.graduate.student.activity.StudentInfoActivity"
            android:label="@string/title_activity_student_info"
