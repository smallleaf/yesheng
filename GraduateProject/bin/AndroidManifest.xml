        </activity>
        <activity
            android:name="com.example.graduate.teacher.activity.TeacherCourceActivity"
            android:label="@string/title_activity_teacher_cource" >
        </activity>
        <activity
            android:name="com.example.graduate.teacher.activity.CourceStateActivity"
            android:label="@string/title_activity_cource_state" >
