<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    android:orientation="vertical"
    >

	<include 
	    layout="@layout/common_tobar"
	    />
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    >
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rectangle_all_corner"
	       android:orientation="vertical"
	        >
	        <EditText
	            android:id="@+id/activity_login_user"
	            android:hint="手机/邮箱/用户名"
	            style="@style/register_edittext" />
	        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />
	        
	        <EditText
	            android:id="@+id/activity_login_pass"
	            android:hint="密码"
	             android:password="true"
	            style="@style/register_edittext" />
	    </LinearLayout>
	    
	</RelativeLayout>
	   
	<Button 
	    android:id="@+id/activity_login_bt_login"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:text="登陆"
	    android:background="@drawable/button_click"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    />
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="8dp"
	    android:padding="10dp"
	    >
	    <TextView 
	        android:id="@+id/activity_register_tv_forget_pass"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textColor="@color/low_blue"
	        android:text="@string/activity_register_forget_pass"
	        />
	    <TextView 
	        android:id="@+id/activity_register_tv_message_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/low_blue"
	        android:text="@string/activity_register_message_login"
	        />
	    
	</RelativeLayout>
</LinearLayout>
