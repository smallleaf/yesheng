<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_tobar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/activity_register_et_phone"
            style="@style/register_edittext"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:numeric="integer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_register_et_identify_code"
                style="@style/register_edittext"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:hint="验证码"
                android:numeric="integer" />

            <Button
                style="@style/register_edittext"
                android:layout_weight="1"
                android:background="@color/low_blue"
                android:text="获取验证码" />
        </LinearLayout>
	<EditText
            android:id="@+id/activity_register_et_pass"
            style="@style/register_edittext"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:hint="新密码"
             android:password="true"
            android:numeric="integer" />
	<EditText
            android:id="@+id/activity_register_et_passagin"
            style="@style/register_edittext"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:hint="再次新密码"
            android:password="true"
            android:numeric="integer" />
        <Button
            android:id="@+id/activity_register_bt_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="同意协议并登陆"
            android:background="@drawable/button_click" />

        <TextView
            android:id="@+id/activity_register_tv_server_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/low_blue"
            android:text="《使用条款和协议》" />

        
    </LinearLayout>

</LinearLayout>