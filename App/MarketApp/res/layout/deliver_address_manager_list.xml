<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView 
	    android:id="@+id/deliver_address_tv_person_name"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:textSize="18sp"
	    android:textColor="@color/black"
	    android:layout_marginLeft="12dp"
	    android:gravity="center"
	    android:text="叶胜"
	    />
	<TextView 
	    android:id="@+id/deliver_address_tv_person_phone"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/deliver_address_tv_person_name"
	    android:layout_height="40dp"
	    android:textSize="18sp"
	    android:textColor="@color/black"
	    android:layout_marginLeft="10dp"
	    android:gravity="center"
	    android:text="15623458658"
	    />
	<TextView 
	    android:id="@+id/deliver_address_tv_add"
	    android:layout_width="wrap_content"
	    android:layout_below="@+id/deliver_address_tv_person_name"
	    android:layout_height="40dp"
	    android:textSize="14sp"
	    android:textColor="@color/gray2"
	    android:layout_marginLeft="12dp"
	    android:gravity="center_vertical"
	    android:text="湖北省武汉市江夏区武汉纺织大学阳光小区5栋宿舍"
	    />
	
    </RelativeLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/delive_iv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yes"
            android:visibility="gone"
             />

    </RelativeLayout>
</LinearLayout>
