<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_all_corner"
    android:padding="10dp" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >

	    <TextView
	        android:id="@+id/common_buy_popwindow_tv_name"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:text="神奇养颜葡萄  1.2元/斤"
	        android:gravity="center_vertical"
	        android:textColor="@color/low_blue"
	        android:textSize="18sp" />
	    
	     <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />
	     <EditText 
	         android:id="@+id/common_buy_popwindow_et_money"
	         android:layout_width="match_parent"
	         android:layout_height="50dp"
	         android:hint="请输入金额"
	         android:inputType="numberDecimal"
	         android:background="@null"
	         android:textSize="14sp"
	         />
	      <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />
	      <LinearLayout 
	          android:layout_width="match_parent"
	          android:layout_height="50dp"
	          android:orientation="horizontal"
	          android:divider="@drawable/common_vertical_divider"
	          android:showDividers="middle"
	          >
	          <Button 
	               android:id="@+id/common_buy_popwindow_bt_cancel"
	              android:layout_weight="1"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="取消"
	              android:textSize="12sp"
	              android:background="@drawable/common_title_right_tv_click"
	              />
	          <Button 
	              android:id="@+id/common_buy_popwindow_bt_confirm"
	              android:layout_weight="1"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="确定"
	              android:textSize="12sp"
	              android:background="@drawable/common_title_right_tv_click"
	              />
	      </LinearLayout>

	</LinearLayout>
</RelativeLayout>
