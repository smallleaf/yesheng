<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="top_title_text_style">
         <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_black_blob_style">
         <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_low_black</item>
        <item name="android:background">@drawable/common_tv_click</item>
    </style>
    <style name="text_black_style">
         <item name="android:textSize">14.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_low_black</item>
        <item name="android:background">@drawable/common_rl_whitegray_click</item>
    </style>
    <style name="text_gray_style">
         <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <style 
        name="text_low_blue_style">
         <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/low_blue</item>
      </style>
      
     <style name="home_tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
     <style name="Order_tab_Top">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/order_tab_background_selector</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
     <style name="back_view">
        <item name="android:gravity">right|center</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minHeight">44.0dip</item>
        <item name="android:text">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/btn_back</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>
     <style name="right_text_view">
        <item name="android:gravity">right|center</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minHeight">44.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>
    
     
     <style name="register_edittext">
         <item name="android:layout_marginLeft">5dp</item>
         <item name="android:layout_gravity">center_vertical</item>
         <item name="android:textSize">16sp</item>
         <item name="android:background">@null</item>
         <item name="android:layout_height">50dp</item>
         <item name="android:layout_width">match_parent</item>
         
     </style>
     <style name="popwindow_anim">
         
         <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
         <item name="android:windowExitAnimation">@anim/fade_ins</item>
     </style>
     
      <style name="chooseStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/anim_remember</item>
        <item name="android:maxHeight">20.0dip</item>
    </style>
    
      <style name="CustomProgressDialog" parent="@style/CustomDialog">
		<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
	
      <style name="CustomDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    	<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	</style>
</resources>
