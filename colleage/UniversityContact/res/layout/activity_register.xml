<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical"
     >

	<include 
	    android:id="@+id/title_register"
	    layout="@layout/title_bar"
	    />

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="130dp"
        android:padding="16dip"
	    >

		
	    
	     <com.wtu.university.view.CircleImageView
	        android:id="@+id/rigister_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@null"
            app:border_width="2dp"
            app:border_color="@color/white" />
	     
	</LinearLayout>	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:padding="16dip"
	    android:orientation="vertical"
	    >
		<LinearLayout 
	        android:id="@+id/login_shape"
	        android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_all_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal"
	        >
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/user"
	            />
	        
	         <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:hint="请输入您的用户名"
                android:singleLine="true"
                android:textSize="16sp" />
	    </LinearLayout>
		<LinearLayout 
	        android:id="@+id/login_shape45"
	        android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_all_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal"
	        >
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/key"
	            />
	        
	         <EditText
                android:id="@+id/register_pass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                  android:inputType="textPassword"
                android:hint="请输入您的密码"
                android:singleLine="true"
                android:textSize="16sp" />
	    </LinearLayout>
		<LinearLayout 
	        android:id="@+id/login_shape3"
	        android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_all_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal"
	        >
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/key"
	            />
	        
	         <EditText
                android:id="@+id/register_pass_again"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                  android:inputType="textPassword"
                android:hint="请再次输入您的密码"
                android:singleLine="true"
                android:textSize="16sp" />
	    </LinearLayout>
	</LinearLayout>
	
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="16dip"
	    android:orientation="horizontal"
	    >
		<Button 
		    android:id="@+id/register_but"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@drawable/login_click"
		    android:text="注册"
		    />
		
		</LinearLayout>
</LinearLayout>