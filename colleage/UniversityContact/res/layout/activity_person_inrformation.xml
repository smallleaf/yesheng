<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
     >

	<include 
	    android:id="@+id/title_person_information"
	    layout="@layout/title_bar"
	    />
	
	<LinearLayout
	    android:id="@+id/person_information_linear1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="12dp"
	    >
	    
	    <RelativeLayout
	        android:id="@+id/information_picture"
	        android:layout_width="match_parent"
	        android:layout_height="100dp"
	        android:background="@drawable/shape_all_corner"
	        android:clickable="true"
	        android:gravity="center_vertical" >

	     <TextView 
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:text="头像"
	            android:textColor="@color/black"
	            android:textSize="16sp"
               />
	     	<ImageView 
	     	    android:id="@+id/information_personpicture"
            	android:layout_width="90dp"
        		android:layout_height="90dp" 
        		android:layout_toLeftOf="@+id/information_arrow1"
        		android:src="@drawable/app"
               	    />
	     	<ImageView 
	     	    android:id="@+id/information_arrow1"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:src="@drawable/login_nextpage"
               	    />
	    
		</RelativeLayout>
	    <RelativeLayout 
	    android:id="@+id/information_laction"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/shape_all_corner"
	     android:clickable="true"
	    >
	     <TextView 
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:text="所在地区"
	            android:textColor="@color/black"
	            android:textSize="16sp"
               />
	     <TextView 
	         android:id="@+id/information_laction_text"
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/information_image2"
	            android:textColor="@color/black"
	            android:text=" "
	            android:textSize="16sp"
               />
	     	<ImageView 
	     	    android:id="@+id/information_image2"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:src="@drawable/login_nextpage"
               	    />
	    
		</RelativeLayout>
		<RelativeLayout 
	    android:id="@+id/information_colleage"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/shape_all_corner"
	     android:clickable="true"
	    >
	     <TextView 
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:text="我的大学"
	            android:textColor="@color/black"
	            android:textSize="16sp"
               />
	      <TextView 
	         android:id="@+id/information_colleage_text"
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/information_image3"
	            android:textColor="@color/black"
	            android:text=" "
