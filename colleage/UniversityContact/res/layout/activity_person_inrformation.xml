	    android:id="@+id/information_association"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/shape_all_corner"
	     android:clickable="true"
	    >
	     <TextView 
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:text="社团"
	            android:textColor="@color/black"
	            android:textSize="16sp"
               />
	     
	       <TextView 
	         android:id="@+id/information_association_text"
                 android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/information_image7"
	            android:textColor="@color/black"
	            android:text=" "
	            android:textSize="16sp"
               />
	     	<ImageView 
	     	    android:id="@+id/information_image7"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_centerVertical="true"
